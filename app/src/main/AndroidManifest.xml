<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rizaldev.debtcollector">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screens.login.LoginActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".screens.register.RegisterActivity"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity
            android:name=".screens.register.BiodataActivity"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity
            android:name=".screens.splash.SplashActivity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.bayar_utang.BayarUtangActivity" />
        <activity android:name=".screens.chat.ChatActivity" />
        <activity
            android:name=".screens.main.MainActivity"
            android:theme="@style/AppThemeLight" />
        <activity android:name=".screens.terima_utang.TerimaUtangActivity" />
        <activity android:name=".screens.utang_baru.UtangBaruActivity" />
        <activity android:name=".screens.notification.NotificationActivity"></activity>
    </application>

</manifest>