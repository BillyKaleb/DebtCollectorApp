<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/colorBlack50" />
            <gradient android:angle="-90" android:startColor="@color/colorBlack50" android:endColor="@color/colorWhite"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/colorBlack50" />
            <solid android:color="@color/colorBlack50"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/colorBlack20" />
            <gradient android:angle="-90" android:startColor="@color/colorBlack20" android:endColor="@color/colorBlack20" />
        </shape>
    </item>
</selector>